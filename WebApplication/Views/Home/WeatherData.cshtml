@model WeatherData
@{
    Layout = "_Layout"; ViewBag.Title = "Weather Application";

}

@try
{
    <h2>Weather Forecast Information For Country : @Model.City.Name</h2>
    string tipoMeteo = "";
    @for (int i = 0; i < 4; i++)
    {
        switch (Model.WeatherDataInfo[i].Weather[0].Visibility.ToString())
        {
            case "Rain": tipoMeteo = "Rainy 🌧"; break;
            case "Clear": tipoMeteo = "Sunnysa! ☀"; break;
            case "Clouds": tipoMeteo = "Cloudy ⛅"; break;
        }
    }


    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>Weather</th><th>Temperature</th><th>Humidity</th><th>Perceived Temperature</th><th>Wind</th></tr></thead>
        <tbody>

            @for (int i=0; i<4; i++){
            <tr>
              <td>@Model.WeatherDataInfo[i].Weather[0].Visibility.ToString()</td>
              <td>@Model.WeatherDataInfo[i].Main.Temperature °C</td>
              <td>@Model.WeatherDataInfo[i].Main.Humidity%</td>
               <td>@Model.WeatherDataInfo[i].Main.Percepita°C</td>
               <td>@Model.WeatherDataInfo[i].Wind.Speed Nodi</td>
            </tr>
            }

        </tbody>
    </table>
    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>
    <br />
     @for (int i = 0; i < 5; i++){
        <h3>Day @(i+1)</h3>
        <h3>@Model.WeatherDataInfo[i].Weather[0].Visibility.ToString()</h3>
   @switch (Model.WeatherDataInfo[i].Weather[0].Visibility.ToString())
    {
        

        case "Clear":
            <img src="~/Images/sunny.jpg" height="400" width="700">
            ; break;
        case "Clouds":
            <img src="~/Images/cloudy.jpg" height="400" width="700">
            ; break;
        case "Rain":
                <img src="~/Images/rainy.jpg" height="400" width="700">
                ; break;
        }
     }
}
catch
{

    <h1> City Entered Cannot be found Error 404</h1>

    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>

}