@model WeatherData
@{ Layout = "_Layout"; ViewBag.Title = "Weather Application";}

@try
{
    <h2>Weather Information For Country : @Model.City.Name</h2>
    string tipoMeteo = "";
    switch (Model.WeatherDataInfo[5].Weather[0].Visibility.ToString())
    {
        case "Rain": tipoMeteo = "Rainy 🌧"; break;
        case "Clear": tipoMeteo = "Sunny! ☀"; break;
        case "Clouds": tipoMeteo = "Cloudy ⛅"; break;
    }
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>Weather</th><th>Temperature</th><th>Humidity</th><th>Perceived Temperature</th><th>Wind</th></tr></thead>
        <tbody>

            <tr>
              <td>@tipoMeteo </td>
              <td>@Model.WeatherDataInfo[5].Main.Temperature °C</td>
              <td>@Model.WeatherDataInfo[5].Main.Humidity%</td>
               <td>@Model.WeatherDataInfo[5].Main.Percepita°C</td>
               <td>@Model.WeatherDataInfo[5].Wind.Speed Nodi</td>
            </tr>


        </tbody>
    </table>
    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>
    <br />
   @switch (Model.WeatherDataInfo[5].Weather[0].Visibility.ToString())
    {
        case "Clear":
            <img src="~/Images/sunny.jpg" height="400" width="700">
            ; break;
        case "Clouds":
            <img src="~/Images/cloudy.jpg" height="400" width="700">
            ; break;
        case "Rain":
                <img src="~/Images/rainy.jpg" height="400" width="700">
                ; break;
        }
}
catch
{

    <h1> City Entered Cannot be found Error 404</h1>

    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>

}